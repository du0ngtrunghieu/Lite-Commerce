@model LiteCommerce.DomainModels.Supplier
@{

}
<div class="box box-primary">
    <form role="form" action="~/Supplier/Input" method="post">
        <div class="box-header text-right">
            <a href="~/Supplier">Back to List</a>
        </div>
        <div class="box-body">
           @*@if (Html.ValidationMessage("") != "")
           {
            <div class="alert alert-danger" role="alert">
                This is a danger alert—check it out!
            </div>
           }*@
            
            <input type="hidden" name="SupplierID" value="@Model.SupplierID" />
            <div class="form-group">
                <label>Company Name: @Html.ValidationMessage("CompanyName",new { @style = "color:red" }) </label>
                <input type="text" name="CompanyName" class="form-control" placeholder="Enter Company Name" value="@Model.CompanyName">
            </div>
            <div class="form-group row">
                <div class="col-sm-6">
                    <label>Contact Name: @Html.ValidationMessage("ContactName", new { @style = "color:red" })</label>
                    <input type="text" name="ContactName" class="form-control" placeholder="Contact Name" value="@Model.ContactName">
                </div>
                <div class="col-sm-6">
                    <label>Contact Title: @Html.ValidationMessage("ContactTitle", new { @style = "color:red" })</label>
                    <input type="text" name="ContactTitle" class="form-control" placeholder="Ex: Sale Manager" value="@Model.ContactTitle">
                </div>
            </div>
            <div class="form-group">
                <label>Address:</label>
                <input type="text" name="Address" class="form-control" placeholder="Address" value="@Model.Address">
            </div>
            <div class="form-group row">
                <div class="col-sm-6">
                    <label>Country:</label>
                    <select class="form-control" name="Country">
                        <option value="">-- Choose Country --</option>
                        @foreach(var country in SelectListHelper.Countries())
                        {
                            if(Model.Country == country.Value){
                                <option value="@country.Value" selected >@country.Text</option>
                            }
                            else
                            {
                                <option value="@country.Value">@country.Text</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-sm-6">
                    <label>City:</label>
                    <input type="text" class="form-control" name="City" placeholder="Ex: New Orleans" value="@Model.City">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-6">
                    <label>Phone:</label>
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <input type="text" name="Phone" class="form-control" value="@Model.Phone">
                    </div>
                </div>
                <div class="col-sm-6">
                    <label>Fax:</label>
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-fax"></i>
                        </div>
                        <input type="text" class="form-control" value="@Model.Fax" name="Fax">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label>Home page:</label>
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="fa fa-link"></i>
                    </div>
                    <input type="text" name="HomePage" class="form-control" placeholder="ex: http://company.com" value="@Model.HomePage">
                </div>
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-sm btn-primary">
                <i class="fa fa-save"></i> Save
            </button>
            <a class="btn btn-sm btn-default" href="~/Supplier">
                Cancel
            </a>
        </div>
    </form>
</div>

